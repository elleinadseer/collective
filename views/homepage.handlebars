            <span class='post-tag'>- <a
                href='/tag/{{tag.tag_name}}'
                data-tag='{{tag.tag_name}}'
              >#{{tag.tag_name}}</a></span>
          {{/each}}
        </p>

        <p class='main-sec-post'>
          {{post.post_content}}
        </p>

